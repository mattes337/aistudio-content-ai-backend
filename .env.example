# Node Environment
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration (matches docker-compose.db.yml defaults)
DATABASE_URL=postgresql://content_ai_user:content_ai_password@localhost:5432/content_ai_db

# JWT Configuration (must match frontend VITE_API_TOKEN for local dev)
JWT_SECRET=your-jwt-secret-change-in-production

# AI Service Configuration
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio

# Anthropic API Configuration (for Claude Agent SDK)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Tavily API Configuration (for web search in research queries)
# Get your API key from https://tavily.com
TAVILY_API_KEY=your-tavily-api-key

# Open Notebook Configuration (for RAG/Knowledge Base)
OPEN_NOTEBOOK_URL=http://localhost:5055
OPEN_NOTEBOOK_PASSWORD=your-open-notebook-password
OPEN_NOTEBOOK_ENABLED=false
